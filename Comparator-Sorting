List<Integer> list = new ArrayList<>( new Comparator<Integer>(){

     public int compare(int a, int b){
        return a-b; // sort ascending
        return b-a; descedning
     }
});

// sort array based in PQ
PriorityQueue<int []> pq = new PriorityQueue<>(new Comparator<int []>()
{
    public int compare(int []a , int []b){
     return b[0]-a[0]// sort descedning base on first element of array
    }
});